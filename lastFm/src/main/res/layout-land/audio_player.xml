<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000"
	xmlns:android="http://schemas.android.com/apk/res/android">

			<fm.last.android.widget.AdArea
				android:id="@+id/AdArea"
				android:background="@drawable/adarea"
				android:layout_width="fill_parent"
				android:layout_height="54px"
		       android:layout_alignParentTop="true"
				android:padding="6dip"/>

			<ImageView
				android:id="@+id/album" android:gravity="center" 
				android:layout_alignParentLeft="true"
				android:layout_below="@id/AdArea"
               	style="@style/playback_artwork" android:src="@drawable/no_artwork"/>
           
			<LinearLayout android:layout_width="fill_parent" android:visibility="gone"
				android:layout_height="38dip"
				android:background="@drawable/stripe" android:paddingTop="6dip" android:paddingBottom="2dip"
				android:id="@+id/noticeContainer">

			<TextView
				android:id="@+id/notice"
				style="@style/notice"
				android:text="This station will soon be discontinued due to changes coming to Last.fm radio. Tap here for more information."
				android:ellipsize="marquee" android:marqueeRepeatLimit="-1"
				android:textColor="#6b670e" android:textColorHighlight="#6b670e" android:textSize="8pt"
				android:paddingRight="6dip"
				android:layout_height="wrap_content"
				android:singleLine="true"
				/>

			<ImageButton
				android:id="@+id/dismiss"
				android:src="@drawable/close" android:background="@null"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>

			</LinearLayout>

               <ImageButton 
                   android:id="@+id/ontour" 
                   android:src="@drawable/on_tour" 
                   android:layout_height="wrap_content"
			       android:layout_width="wrap_content"
			       android:layout_below="@id/noticeContainer"
			       android:layout_alignParentRight="true"
			       android:background="@null"
					android:contentDescription="@string/action_ontour"
			       android:visibility="gone"/>

				<TableLayout android:id="@+id/track_metadata"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:layout_below="@id/AdArea"
					android:layout_toRightOf="@id/album"
					android:paddingTop="80dip">
	
	                <TableRow 
	                    android:layout_height="wrap_content"
	                    android:layout_width="fill_parent">
	                    
	                    <TextView android:id="@+id/track_artist"
	                        style="@style/playback_info"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="left"
	                        android:textStyle="bold"
	                        android:textSize="18sp"
	                        android:text="Artist"/>
	                </TableRow>
					
					<TableRow
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:layout_marginBottom="10dip">
						
						<TextView android:id="@+id/track_title"
							style="@style/playback_info"
							android:layout_height="wrap_content"
							android:textStyle="bold" 
							android:textSize="18sp"
							android:gravity="left"
							android:singleLine="true"
							android:focusable="true"
							android:text="Title"/>
					</TableRow>
					
					<TableRow
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:layout_marginBottom="10dip">
						
						<TextView android:id="@+id/track_context"
							style="@style/playback_info"
							android:layout_height="wrap_content"
							android:textStyle="bold" 
							android:textSize="18sp"
							android:gravity="left"
							android:singleLine="false"
							android:focusable="true"
							android:text="Title"/>
					</TableRow>
				</TableLayout>
            
                <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/album"
	                android:layout_below="@id/track_metadata"
	                android:layout_marginBottom="18dip" android:layout_marginRight="10dip">
	            
		            <TextView android:id="@+id/currenttime"
		                style="@style/playback_time"
		                android:textSize="12sp"
		                android:layout_height="wrap_content"
		                android:gravity="left" 
		                android:textStyle="bold"
		                android:layout_gravity="bottom"
		                android:layout_width="wrap_content"
		                android:text="--:--"/>
		                
		            <ProgressBar android:id="@android:id/progress"
		                android:background="#000"
		                android:layout_height="8dip"
		                android:layout_width="fill_parent"
		                android:layout_weight="1"
		                android:paddingLeft="5dip"
		                android:paddingRight="5dip"
		                android:indeterminateOnly="false"
		                android:progressDrawable="@drawable/progress_horizontal"
		                android:layout_marginLeft="5dip"
		                android:layout_marginRight="5dip"
		                android:layout_gravity="center_vertical"/>
		
		            <TextView android:id="@+id/totaltime"
		                style="@style/playback_time"
		                android:textSize="12sp"
		                android:layout_gravity="bottom"
		                android:layout_height="wrap_content"
		                android:textStyle="bold"
		                android:gravity="right"
		                android:layout_width="wrap_content"
		                android:text="--:--"/>
		
	            </LinearLayout>			

	     <LinearLayout 
	        android:id="@+id/playback_controls"
	        android:orientation="horizontal"
               android:layout_gravity="bottom"
               android:layout_marginTop="1dip"
               android:layout_width="fill_parent"
               android:layout_height="62dip"
               android:gravity="center" android:weightSum="100"
               android:layout_alignParentBottom="true">
				<ImageButton android:id="@+id/love" style="@+style/LastFMButton.Love" android:contentDescription="@string/action_love" android:layout_weight="25" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/player_controls" android:src="@drawable/love"/>
				<ImageButton android:id="@+id/ban" style="@+style/LastFMButton.Ban" android:contentDescription="@string/action_ban" android:layout_weight="25" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/player_controls" android:src="@drawable/ban"/>
				<ImageButton android:id="@+id/stop" style="@+style/LastFMButton.Stop" android:contentDescription="@string/action_stop" android:layout_weight="25" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/player_controls" android:src="@drawable/stop"/>
				<ImageButton android:id="@+id/skip" style="@+style/LastFMButton.Skip" android:contentDescription="@string/action_skip" android:layout_weight="25" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/player_controls" android:src="@drawable/skip"/>
           </LinearLayout>
</RelativeLayout>
